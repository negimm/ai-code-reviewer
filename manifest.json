{
  "manifest_version": 3,
  "name": "Gemini Code Reviewer",
  "version": "1.0",
  "description": "An AI-powered extension using Chrome Built-in AI APIs to review code for best practices and issues.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Gemini Code Reviewer - Click to open side panel"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module" 
  },
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "sidePanel",
    "ai"
  ],
  "host_permissions": [
    "https://github.com/*",
    "https://gist.github.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*",
        "https://gist.github.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["content.css", "icons/*"],
      "matches": [
        "https://github.com/*",
        "https://gist.github.com/*"
      ]
    }
  ],
  "side_panel": {
    "default_path": "sidepanel.html" 
  }
}